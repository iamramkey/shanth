<project default="main">

	<property name="lib.dir"  value="WebContent/WEB-INF/lib/"/>
	<property name="config.dir"  value="JavaContent/config/"/>
    
	<path id="compile.classpath">
        <fileset dir="${config.dir}" includes="**/*.*"/>
        <fileset dir="${lib.dir}" includes="**/*.jar"/>
    </path>

    <target name="clean">
        <delete dir="build"/>
    </target>

    <target name="compile">
        <mkdir dir="build/classes"/>
		<javac srcdir="src" destdir="build/classes"  debug="true" classpathref="compile.classpath" />
		
    </target>

    <target name="makewar">
    	<copy todir="build/classes"> 
			<fileset dir="JavaContent/config/"/>
		</copy>
    	<war destfile="signature.war" webxml="WebContent/WEB-INF/web.xml">
		<fileset dir="WebContent">
      		<include name="**/*.*"/>
		</fileset>
		<lib dir="WebContent/WEB-INF/lib/" />
		<classes dir="build/classes"/>		
	</war>
	</target>
    
<target name="main" depends = "clean,compile,makewar" />

</project>